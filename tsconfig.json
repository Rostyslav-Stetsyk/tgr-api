{
	"compilerOptions": {
		"target": "ES2021",
		"module": "commonjs",
		"resolveJsonModule": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"sourceMap": true
	},
	"include": ["src/**/*"],
	"exclude": ["**/*.spec.ts", "test/**/*"]
}
